{
  "manifest_version": 2,
  "name": "Tempo Time Tracker",
  "version": "1.0.0",
  "description": "Track time and log work to Tempo Timesheets directly from your browser. Start tracking with one click from any webpage.",
  "author": "Claudio Ferraro",
  "homepage_url": "https://github.com/claudio-ferraro/tempo-time-tracker-for-firefox",
  "browser_specific_settings": {
    "gecko": {
      "id": "tempo-time-tracker@tempo.io",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "health_report": false,
        "personalized_recommendations": false
      }
    }
  },
  "browser_action": {
    "default_title": "Tempo Time Tracker",
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "48": "assets/icon-48.png"
    }
  },
  "background": {
    "scripts": ["src/background.js"]
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png",
    "128": "assets/icon-128.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "alarms",
    "https://*.atlassian.net/*",
    "https://*.atlassian.com/*",
    "https://api.tempo.io/*",
    "https://auth.atlassian.com/*",
    "https://claudio-ferraro.github.io/tempo-time-tracker-for-firefox/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/overlay.js"],
      "run_at": "document_idle"
    }
  ]
}
